{
    "// VSCode C++ formatting settings for tdLBCpp project": "",
    "// Copy this file to settings.json (without the comments) to enable formatting": "",
    "// Adjust clang_format_path to match your system installation": "",

    "C_Cpp.clang_format_path": "/opt/homebrew/bin/clang-format",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "Google",

    "// Format on save (recommended)": "",
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.formatOnPaste": false,

    "// C/C++ specific settings": "",
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
    },
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
    },
    "[cuda-cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },

    "// File associations": "",
    "files.associations": {
        "*.hpp": "cpp",
        "*.cuh": "cuda-cpp",
        "*.gyb": "python"
    },

    "// Exclude build directories from search": "",
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/bazel-*": true,
        "**/build": true
    },
    "search.exclude": {
        "**/bazel-*": true,
        "**/build": true,
        "**/__pycache__": true
    },

    "// C++ IntelliSense configuration": "",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.compilerPath": "/usr/bin/clang++",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/tdlbcpp/src",
        "${workspaceFolder}/tdlbcpp/src/Params",
        "${workspaceFolder}/tdlbcpp/src/Tools"
    ],

    "// Bazel integration (if bazel extension installed)": "",
    "bazel.buildifierExecutable": "/opt/homebrew/bin/buildifier",
    "bazel.enableCodeLens": true,

    "// Python settings for .gyb templates": "",
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    }
}
